<Window x:Class="P4PSpeechDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EMU 2.0" Height="533.665" Width="869.5">
    <Window.Resources>
        
        
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Expander x:Name="exp" IsExpanded="{Binding Path=Items[0].IsExpanded, Mode=TwoWay}"
                                      Background="White"
                                      Foreground="Black">

                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Margin" Value="5,0,0,0"/>
                                        </Style>
                                    </StackPanel.Resources>
                                    <CheckBox IsChecked="{Binding IsHeaderSelected}" MaxHeight="15" MaxWidth="15"/>
                                    <TextBlock Text="{Binding Name}" />
                                    <!--<TextBlock Text="{Binding Path =ItemCount}" />-->
                                </StackPanel>
                            </Expander.Header>

                            <StackPanel>
                                <ItemsPresenter Margin="20,0,0,0"/>
                            </StackPanel>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Height="512" Margin="0,0,17,-21" VerticalAlignment="Top" >

        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="80" Margin="395,299,0,0" MediaEnded="mediaElement_MediaEnded" LoadedBehavior="Manual"
              UnloadedBehavior="Stop" />


        <DataGrid AutoGenerateColumns ="False" VerticalAlignment="Top" GridLinesVisibility="None" Height="341" Margin="165,146,0,0" x:Name="dataGridFiles"  
    		HorizontalAlignment="Left" Width="263" HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled">


            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="FileID" Width="*" IsReadOnly="True" SortDirection="Ascending"/>
                <DataGridTextColumn Binding="{Binding tableName}" Header="FileType" Width="*" IsReadOnly="True" />
            </DataGrid.Columns>
            
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="Control.MouseDoubleClick" Handler="resultDataGrid_MouseDoubleClick"/>
                    <EventSetter Event="UIElement.GotFocus" Handler="dataGridFiles_GotCellFocus"/>
                </Style>

            </DataGrid.RowStyle>

            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}">
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter/>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>
        </DataGrid>

        <TextBox x:Name="searchBox" HorizontalAlignment="Left" Height="20" Margin="165,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263" FontStyle="Italic" Foreground="#7F000000" KeyDown="TextBox_KeyDown" >

            <TextBox.Style>
                <Style xmlns:sys="clr-namespace:System;assembly=mscorlib" TargetType="{x:Type TextBox}">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Search for a file" Foreground="LightGray" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button Visibility="Hidden" Content="MAGIC ADD ALL BUTTON!!!" HorizontalAlignment="Left" Margin="656,332,0,0" VerticalAlignment="Top" Width="330" Click="loadAllButton_Click"/>

        <StackPanel HorizontalAlignment="Left" Height="227" Margin="10,260,0,0" VerticalAlignment="Top" Width="150" Background="LightSlateGray">
            <Button Content="Add File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="131" Height="28" Click="ButtonBrowse_Click" Margin="10,10,0,0"/>
            <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="31" Click="ButtonDelete_Click" Margin="10,10,0,0"/>
            <Button Content="Vocal Tract Synthesis" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" Width="130"/>
            <Button Content="Generate Template File" HorizontalAlignment="Left" Height="32" Margin="10,10,0,0" Width="130" Click="ButtonTemplate_Click"/>
            <Button Content="Go to WebMaus" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" Width="130"/>
            <Button Content="Stop Audio" Margin="18,5" Click="Button_Click_1" />

        </StackPanel>
        <ComboBox HorizontalAlignment="Left" Margin="623,36,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="565,38,0,0" TextWrapping="Wrap" Text="Sort By" VerticalAlignment="Top"/>

        <DataGrid AutoGenerateColumns ="False" VerticalAlignment="Top" GridLinesVisibility="None" Height="410" Margin="448,77,0,0" x:Name="dataGridAnalysis" HorizontalAlignment="Left" Width="386" HeadersVisibility="Column" CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding AID}" Header="Analysis ID" Width="120" IsReadOnly="True" SortDirection="Ascending"/>
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*" IsReadOnly="True" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="Control.MouseDoubleClick" Handler="analysisDataGrid_MouseDoubleClick"/>
                </Style>

            </DataGrid.RowStyle>



            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}">
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter/>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>
        </DataGrid>



        <DataGrid AutoGenerateColumns ="False" VerticalAlignment="Top" GridLinesVisibility="None" Height="166" Margin="10,77,0,0" 
                  x:Name="dataGridProjects" HorizontalAlignment="Left" Width="141" 
                  HeadersVisibility="Column" CanUserAddRows="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" IsSynchronizedWithCurrentItem="False">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PID}" Header="Project" Width="*" IsReadOnly="True" SortDirection="Ascending"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="UIElement.GotFocus" Handler="dataGridProjects_GotCellFocus"/>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>
        <ComboBox x:Name="speakerCombo" HorizontalAlignment="Left" Margin="223,110,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="speakerCombo_SelectionChanged" SelectedValuePath="Content">
            <ComboBoxItem Name="Speaker">Speaker</ComboBoxItem>
            <ComboBoxItem Name="tableName">File Type</ComboBoxItem>
            <ComboBoxItem Name="Age">Age</ComboBoxItem>

        </ComboBox> 
        <TextBlock HorizontalAlignment="Left" Margin="165,112,0,0" TextWrapping="Wrap" Text="Group By" VerticalAlignment="Top"/>
        
        <TextBlock x:Name="emptyGrid" HorizontalAlignment="Left" Margin="177,178,0,0" TextWrapping="Wrap" Text="Select a project to view files" VerticalAlignment="Top" Width="236"/>
        <TextBlock x:Name="emptyGrid2" HorizontalAlignment="Left" Margin="458,110,0,0" TextWrapping="Wrap" Text="Select a file to view analysis" VerticalAlignment="Top" Width="236"/>

    </Grid>

</Window>
