<Window x:Class="P4PSpeechDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EMU 2.0" Height="420" Width="725">
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Expander x:Name="exp" IsExpanded="False"
                                      Background="White"
                                      Foreground="Black">
                            
                            <Expander.Header>

                                    <TextBlock Text="{Binding Name}" />
                                <!--<TextBlock Text="{Binding Path =ItemCount}" />-->

                            </Expander.Header>
                            
                            <StackPanel>
                                <ItemsPresenter Margin="20,0,0,0"/>
                            </StackPanel>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Height="423" Margin="0,0,0,-0.2" VerticalAlignment="Top" >
        <Button Visibility="Hidden" Content="MAGIC ADD ALL BUTTON DONT PRESS" HorizontalAlignment="Left" Margin="177,352,0,0" VerticalAlignment="Top" Width="330" Height="18" Click="ButtonLoad_Click" RenderTransformOrigin="1.338,0.589"/>
        <Button Content="Add File" HorizontalAlignment="Left" Margin="10,314,0,0" VerticalAlignment="Top" Width="141" Height="56" Click="ButtonBrowse_Click"/>

        <DataGrid AutoGenerateColumns ="False" VerticalAlignment="Top" GridLinesVisibility="None" Height="225" Margin="10,77,0,0" Name="dataGridFiles" ItemsSource="{Binding Path=LoadDataBinding}" HorizontalAlignment="Left" Width="497" HeadersVisibility="Column" CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=ID}" Header="FileID" Width="120" IsReadOnly="True" SortDirection="Ascending"/>
                <DataGridTextColumn Binding="{Binding Path=Speaker}" Header="Speaker" Width="210" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=ProjectName}" Header="Project" Width="210" IsReadOnly="True" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="MouseDoubleClick" Handler="resultDataGrid_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}">
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter/>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>
            
        </DataGrid>
        <TextBox Name="searchBox" HorizontalAlignment="Left" Height="20" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="341" FontStyle="Italic" Foreground="#7F000000" KeyDown="TextBox_KeyDown" >
            <TextBox.Style>
                <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Search" Foreground="LightGray" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button Visibility="Hidden" Content="LESS DANGEROUS BUT STILL MAGIC ADD ALL BUTTON" HorizontalAlignment="Left" Margin="177,314,0,0" VerticalAlignment="Top" Width="330" Click="Button_Click"/>
        <StackPanel HorizontalAlignment="Left" Height="332" Margin="530,38,0,0" VerticalAlignment="Top" Width="168" Background="LightSlateGray">
            <Button Content="Generate Template File" HorizontalAlignment="Left" Height="54" Margin="18,10,0,0" Width="132"/>
            <Button Content="Vocal Tract Synthesis" HorizontalAlignment="Left" Height="54" Margin="18,10,0,0" Width="132"/>
            <Button Content="Go to WebMaus" HorizontalAlignment="Left" Height="54" Margin="18,10,0,0" Width="132"/>
            <Button Content="Stop Audio" Margin="18,0" Click="Button_Click_1"/>

        </StackPanel>
        <MediaElement Name="mediaElement" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="80" Margin="575,254,0,0" MediaEnded="mediaElement_MediaEnded"/>

    </Grid>
    
</Window>
