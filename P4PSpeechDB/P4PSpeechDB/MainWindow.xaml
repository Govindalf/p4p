<Window x:Class="P4PSpeechDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="420" Width="525">
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                            <Expander x:Name="exp" IsExpanded="False"
                                      Background="White"
                                      Foreground="Black">
                                <Expander.Header>
                                    <TextBlock Text="{Binding Name}"/>
                                </Expander.Header>
                                <StackPanel>
                                    <ItemsPresenter/>
                                </StackPanel>
                            </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Height="423" Margin="0,0,0,-0.2" VerticalAlignment="Top" >
        <Grid HorizontalAlignment="Left" Height="206" Margin="114,30,0,0" VerticalAlignment="Top" Width="330">

        </Grid>
        <Button Content="Connect to MySql" HorizontalAlignment="Left" Margin="260,343,0,0" VerticalAlignment="Top" Width="138" Height="36" Click="ButtonLoad_Click" RenderTransformOrigin="1.338,0.589"/>
        <Button Content="Add File" HorizontalAlignment="Left" Margin="100,343,0,0" VerticalAlignment="Top" Width="135" Height="36" Click="ButtonBrowse_Click"/>
        <DataGrid AutoGenerateColumns ="False" VerticalAlignment="Top" GridLinesVisibility="None" Height="225" Margin="10,100,10,0" Name="dataGridFiles" ItemsSource="{Binding Path=LoadDataBinding}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=ID}" Header="FileID" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=filePath}" Header="FilePath" Width="210" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=ProjectName}" Header="Project" Width="210" IsReadOnly="True" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="MouseDoubleClick" Handler="resultDataGrid_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}">
                <GroupStyle.Panel>
                    <ItemsPanelTemplate>
                        <DataGridRowsPresenter/>
                    </ItemsPanelTemplate>
                </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>               
        </DataGrid>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="10,66,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="341" FontStyle="Italic" Foreground="#7F000000"/>

    </Grid>
</Window>
