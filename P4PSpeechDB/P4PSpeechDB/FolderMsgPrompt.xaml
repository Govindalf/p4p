<Window x:Class="P4PSpeechDB.FolderMsgPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FolderMsgPrompt" Height="150" Width="300">
    <StackPanel Margin="5">
        <TextBlock Name="txtCreateFolder" Margin="5"/>
        <TextBox Name="txtFolderName" Margin="5" Background="#FFE4E0E0"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="Add to folder" IsDefault="True" Margin="5" Name="btnAdd" Click="btnAdd_Click" />
            <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
