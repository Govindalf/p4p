    <Window.DataContext>
        <!-- Declaratively create an instance of our Album View Model-->
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Expander x:Name="exp" Background="White" Foreground="Black">
                            <!--Items[0].IsExpanded-->

                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Foreground" Value="#565051" />
                                            <Setter Property="Margin" Value="5,0,0,0"/>
                                        </Style>
                                    </StackPanel.Resources>
                                    <CheckBox MaxHeight="15" MaxWidth="15"/>
                                    <!--IsChecked="{Binding IsHeaderSelected}"-->
                                    <TextBlock Text="{Binding Name}" />
                                    <!--<TextBlock Text="{Binding Path =ItemCount}" />-->
                                </StackPanel>
                            </Expander.Header>

                            <StackPanel>
                                <ItemsPresenter Margin="20,0,0,0"/>
                            </StackPanel>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <CollectionViewSource x:Key="speak" Source="{Binding Path=Speakers}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Name" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid Height="680" Margin="0,-20,-4.8,-17.2" VerticalAlignment="Top" >
        <Grid.RowDefinitions>
